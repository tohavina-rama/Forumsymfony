<!-- Forum Header -->
<div class="forum-header">
    <h1 class="forum-title">Bienvenue sur ForumTech</h1>
    <p>La communauté des passionnés de technologie</p>
    <div class="forum-stats">
      <div class="stat">
          <div class="stat-number">{{ usersCount }}</div>
          <div class="stat-label">
              {{ usersCount > 1 ? 'Membres' : 'Membre' }}
          </div>
      </div>
      <div class="stat">
          <div class="stat-number">
              {{ postsCount }}
          </div>
          <div class="stat-label">
              {{ postsCount > 1 ? 'Sujets' : 'Sujet' }}
          </div>
      </div>
      <div class="stat">
          <div class="stat-number">{{ commentsCount }}</div>
          <div class="stat-label">
              {{ commentsCount > 1 ? 'Messages' : 'Message' }}
          </div>
      </div>
      <div class="stat">
          <div class="stat-number">{{ categoryCount }}</div>
          <div class="stat-label">
              {{ categoryCount > 1 ? 'Catégories' : 'Catégorie' }}
          </div>
      </div>
    </div>
</div>
